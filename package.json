{
  "name": "build-ng-edu",
  "version": "0.15.0",
  "description": "A library of Angular 2 components for use in online education applications/interactives/digital learning objects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/UNLV-Online-Education/ng-edu"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rimraf .tmp && rimraf dist",
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/ng-edu.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ng-edu.umd.min.js",
    "copy": "cp package-dist.json dist/package.json",
    "build": "npm run clean && npm run transpile && npm run package && npm run minify && npm run copy"
  },
  "keywords": [
    "UNLV",
    "online",
    "education",
    "learning",
    "angular2"
  ],
  "author": {
    "name": "John Murphy",
    "email": "john.murphy@unlv.edu"
  },
  "contributors": [
    {
      "name": "Patrick Rios",
      "email": "patrick.rios@unlv.edu"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/router": "^4.0.0",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "cpx": "^1.5.0",
    "renamer": "^0.6.1",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "typescript": "~2.3.3",
    "uglify-js": "^2.8.14"
  },
  "typings": "./index.d.ts"
}
